#!/usr/bin/expect -f

set timeout 20
set ip       [lindex $argv 0]
set port     [lindex $argv 1]
set user     [lindex $argv 2]
set password [lindex $argv 3]
set tail     [lindex $argv 4]
set dir      [lindex $argv 5]

send_user "port: $port\n"
send_user "dir: $dir\n"

if { [string compare $tail "" ] == 0} {
    set tail "defproc"
}

proc Value {val {def --}} {
   expr {$val ne "" ? $val : $def}
}

proc abort {msg} {
    send_user "Login failed: $msg"
    exit
}

proc reboot {} {
    send "reboot\r"
    expect "\[$#] "
    interact
}

proc powerup {} {
    global dir

    send "cd $dir\r"
    send "./run-powerup.sh\r"
    expect "\[$#] "
    interact
}

proc defproc {} {
    interact
}

spawn telnet $ip $port
expect "'^]'."
expect {
	-nocase "login:"               { send "$user\r";     exp_continue; }
	-nocase "password:"            { send "$password\r"; exp_continue; }
	-nocase "\[$#] "               { $tail; }
	-nocase "telnet: "             { abort "Error" }
	-nocase "host: "               { abort "Error" }
}
