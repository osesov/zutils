#! /bin/bash

function die()
{
	echo $*
	exit 1
}

confdir=${XDG_CONFIG_HOME:-$HOME/.config}/tn
boxlist=$confdir/box
addrtype=
box=
boxdir=$confdir
curbox=$boxdir/current
config=$confdir/tn.config
mode=${0##*/}

source $config

if [ "$mode" = "tn" ]; then
    case $1 in
    cmd2k|snmpget|snmpwalk|set|getfile|com|list|status)
	mode=$1
	shift
	;;
    esac
fi

case $mode in
    set|tn|list|status) ;;

    cmd2k|snmpget|snmpwalk|getfile)
	addrtype=ip;;

    com)
	addrtype=com;;

    *)
	die "unknown sub command: $mode";;
esac


while test $# -ne 0; do
	i=$1

	case $i in
	-rf)  [ -z "$addrtype" ] && addrtype=rf;;
	-ip)  [ -z "$addrtype" ] && addrtype=ip;;
	-com) [ -z "$addrtype" ] && addrtype=com;;
	-*) die "unknosn option $i";;
	@*) box=${i:1};;
	*) break;;
	esac

	shift
done

if [ -z "$addrtype" ]; then
	addrtype=ip
fi

case $mode in
    list)

	cat $boxlist | while IFS=':' read -ra BOX; do
		name=${BOX[0]}
		case $name in
		\#*)
			;;

		*)
			printf "%s:\tip=%s\trf=%s\tcom=%s\n" "${BOX[0]}" "${BOX[1]}" "${BOX[2]:-<none>}" "${BOX[3]:-<none>}"
		;;
		esac
	done
	exit 0
    ;;
esac

#read box info
if [ -z "$box" ]; then
    if [ -f "$curbox" ]; then
	box=$(cat "$curbox")
    else
	die "No box specified"
    fi
fi

boxes=$(cat "$boxlist")
while IFS=':' read -ra BOX; do
    name=${BOX[0]}
    case $name in
    \#*)
	;;

    $box)
	if [ "$found" != "yes" ]; then
		found=yes
		ip=${BOX[1]}
		rf=${BOX[2]}
		com=${BOX[3]}
	fi
	;;
    esac
done <<< "$boxes"

if [ "$found" != "yes" ]; then
    die "Box '$box' is not found in $boxlist"
fi

case "$mode" in 
    com|tn)
	tput reset
	;;
esac

echo "$box" > "$curbox"
echo "Using box: $box"

addr=${!addrtype}
[ -n "$addr" ] || die "${addrtype} address for $mode is not defined"
echo "Address: $addr($mode)"

function xtelnet()
{
	case $addrtype in
	ip|rf)
#		ping -w90 -c1 $addr || die "Unable to ping box"
#		sleep 0.5
		zping --time 120000 --wait 1000 $addr:telnet || die "Unable to ping box: $addr"
#		exec telnet $addr
		exec $(dirname $0)/ztelnet $addr telnet root wb@humax "$1" "$rundir" "${exe:-./run-powerup.sh}"
		;;
	com)
		sudo -u zodiac miniterm.py $com 115200
		;;
	esac
}

case "$mode" in 
    com)
	xtelnet
	;;

    cmd2k)
	cmd2000 $addr "$*" 2>/dev/null # | cut -b46-
	;;

    tn)
	xtelnet $1
	;;

    snmpwalk)
	snmpwalk -v 2c -c CvC0ms $addr:161 $*
	;;

    snmpget)
	snmpget -v 2c -c CvC0ms $addr:161 $*
	;;

    set)
	;;

    getfile)
        file=$1
	out=${2:-${file##*/}}
        $(dirname $0)/zgetfile "$addr" telnet root wb@humax "$file" "$out"
	;;

    status)
	printf "%s: %s %s\n" "$box" "$addrtype" "$addr"
	;;
esac

